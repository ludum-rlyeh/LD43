script/source = "extends Node2D

var destination = Vector2(0,0)
var scale_init = 3.0
var scale_dest = 0.2
var speed = 0.01
var position_dest
var transition_scale
var transition_position
var STATE = 0
var nb_steps

func _ready():
	self.transition_scale = (scale_init - scale_dest) * speed
	self.nb_steps = (scale_init - scale_dest) / self.transition_scale
	self.position_dest = Vector2(200,500)
	self.transition_position = (self.position_dest - position).normalized() * ((position - self.position_dest).length()) * speed
	

func _process(delta):
	if STATE == 0:
		var scale = max(scale_dest, get_scale().x - self.transition_scale)
		set_scale(Vector2(scale, scale))
		self.nb_steps -= 1
		set_position(get_position() + self.transition_position)
		if self.nb_steps < 0:
			STATE = 1
			$Explosion.emitting = true
	elif STATE == 1:
		var modulate = $Sprite.get_modulate()
		modulate.a -= 20
		$Sprite.set_modulate(modulate)
		$Particles2D.set_modulate(modulate)
		$Particles2D2.set_modulate(modulate)
		if modulate.a <= 0:
			set_process(false)
		"

